@using Ecommerce.Models;
@model Client
<div class="tab-pane fade show active" role="tabpanel" id="Details" aria-labelledby="Details-Tab">
    <div class="row">
        <div class="col-md-12">
            <h4>Personal Details</h4>
            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>Email Address</td>
                            <td>@Model.Email</td>
                            <td><button type="button" class="btn btn-primary btn-sm shadow w-100" data-toggle="modal" data-target="#UpdateEmailModal">Edit</button></td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="UpdateEmailModal">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("UpdateDetails", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h4 class="modal-title">Edit Details</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>New Email</label>
                        <input class="form-control" type="email" name="Email" required />
                    </div>
                </div>
                <div class="modal-footer">
                    @await Html.PartialAsync("~/Views/Shared/Recaptcha.cshtml")
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>